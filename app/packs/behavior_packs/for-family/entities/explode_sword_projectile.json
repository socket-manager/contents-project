{
    "format_version": "1.17.10",
    "minecraft:entity": {
        "description": {
            "identifier": "customize:explode_sword_projectile",
            "is_spawnable": false,
            "is_summonable": true,
            "properties": {
                "customize:is_response": {
                    "type": "bool",
                    "default": false
                },
                "customize:tick_count": {
                    "type": "int",
                    "range": [0, 100],
                    "default": 0
                },
                "customize:is_offhand": {
                    "type": "bool",
                    "default": false
                }
            }
        },
        "component_groups": {
			"customize:despawn_self": {
                "minecraft:instant_despawn": {
                }
            }
		},
        "components": {
            "minecraft:health": {
                "value": 1000,
                "max": 1000
            },
            "minecraft:breathable": {
                "breathes_solids": true,
                "breathes_water": true
            },
            "minecraft:collision_box": {
                "width": 0.0,
                "height": 0.0
            },
            "minecraft:projectile": {
                "on_hit": {
                    "impact_damage": {
                        "damage": [ 1, 4 ],
                        "knockback": true,
                        "semi_random_diff_damage": false,
                        "destroy_on_hit": false
                    },
                    "stick_in_ground": {
                        "shake_time" : 0.35
                    }
                },
                "hit_sound": "bow.hit",
                "power": 1.6,
                "gravity": 0.01
            },
            "minecraft:entity_sensor": {
                "subsensors": [
                    {
                        "event_filters": {
                            "any_of": [
                                { "test": "on_ground", "subject": "self", "operator": "equals", "value": true }
                            ]
                        },
                        "event": "customize:despawn_self"
                    },
                    {
                        "event_filters": {
                            "all_of": [
                                { "test": "bool_property", "domain": "customize:is_response", "subject": "self", "operator": "equals", "value": true },
                                { "test": "is_moving", "subject": "self", "operator": "equals", "value": true }
                            ]
                        },
                        "event": "customize:is_moving"
                    }
                ]
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "queue_command": {
					"command": [
                        "event entity @p customize:is_shop_for_explode_sword"
                    ]
				}
            },
            "customize:is_response_set": {
                "set_property": {
                    "customize:is_response": true
                }
            },
            "customize:is_offhand_set": {
                "set_property": {
                    "customize:is_offhand": true
                }
            },
            "customize:despawn_self": {
                "add": {
                    "component_groups": [
                        "customize:despawn_self"
                    ]
                }
            },
            "customize:is_moving": {
                "sequence": [
                    {
                        "set_property": {
                            "customize:tick_count": "query.property('customize:tick_count') + 1"
                        }
                    },
                    {
                        "filters": {
                            "test": "int_property", "domain": "customize:tick_count", "subject": "self", "operator": ">", "value": 10
                        },
                        "add": {
                            "component_groups": [
                                "customize:despawn_self"
                            ]
                        }
                    },
                    {
                        "filters": {
                            "test": "bool_property", "domain": "customize:is_offhand", "subject": "self", "operator": "=", "value": true
                        },
                        "queue_command": {
                            "command": [
                                "summon lightning_bolt ~ ~-2 ~"
                            ]
                        }
                    },
                    {
                        "queue_command": {
                            "command": [
                                "summon ender_crystal ~ ~ ~ 0 0 minecraft:crystal_explode"
                            ]
                        }
                    }
                ]
            }
        }
    }
}
