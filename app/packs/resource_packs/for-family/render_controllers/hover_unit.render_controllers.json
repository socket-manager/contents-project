{
    "format_version": "1.10",
    "render_controllers": {
        "controller.render.hover_unit": {
            "arrays": {
                "textures": {
                    "array.hover_unit_texture_frames": [
                        "texture.default"
                    ]
                },
                "geometries": {
                    "array.hover_unit_geo_frames": [
                        "geometry.default"
                    ]
                }
            },
            "geometry": "array.hover_unit_geo_frames[query.get_animation_frame]",
            "materials": [ { "*": "variable.is_enchanted ? material.enchanted : material.default" } ],
            "textures": [ "array.hover_unit_texture_frames[query.get_animation_frame]", "texture.enchanted" ]
        }
    }
}
