{
  "format_version": "1.10",
  "render_controllers": {
    "controller.render.thunder_rod": {
      "arrays": {
        "textures": {
          "array.thunder_rod_texture_frames": [
            "texture.default"
          ]
        },
        "geometries": {
          "array.thunder_rod_geo_frames": [
            "geometry.default"
          ]
        }
      },
      "geometry": "array.thunder_rod_geo_frames[query.get_animation_frame]",
      "materials": [ { "*": "variable.is_enchanted ? material.enchanted : material.default" } ],
      "textures": [ "array.thunder_rod_texture_frames[query.get_animation_frame]", "texture.enchanted" ]
    }
  }
}
