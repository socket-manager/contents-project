{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "customize:thunder_sword_revised",
      "materials": {
        "default": "entity_alphatest",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "default": "textures/items/thunder_sword_revised",
        "thunder_sword_revised_pulling_0": "textures/items/thunder_sword_revised_pulling_0",
        "thunder_sword_revised_pulling_1": "textures/items/thunder_sword_revised_pulling_1",
        "thunder_sword_revised_pulling_2": "textures/items/thunder_sword_revised_pulling_2",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.thunder_sword_revised",
        "thunder_sword_revised_pulling_0": "geometry.thunder_sword_revised_pulling_0",
        "thunder_sword_revised_pulling_1": "geometry.thunder_sword_revised_pulling_1",
        "thunder_sword_revised_pulling_2": "geometry.thunder_sword_revised_pulling_2"
      },
      "animations": {
        "wield": "animation.thunder_sword_revised.wield",
        "wield_first_person_pull": "animation.thunder_sword_revised.wield_first_person_pull"
      },
      "scripts": {
        "pre_animation": [
          "variable.charge_amount = math.clamp((query.main_hand_item_max_duration - (query.main_hand_item_use_duration - query.frame_alpha + 1.0)) / 10.0, 0.0, 1.0f);"
        ],
        "animate": [
          "wield",
          {
            "wield_first_person_pull": "query.main_hand_item_use_duration > 0.0f && c.is_first_person"
          }
        ]
      },
      "render_controllers": [ "controller.render.thunder_sword_revised" ]
    }
  }
